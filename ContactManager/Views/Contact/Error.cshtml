@model System.Exception

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f0f0f0;
        padding: 20px;
    }

    .error-container {
        max-width: 600px;
        margin: 0 auto;
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h1 {
        font-size: 24px;
        color: #333;
        margin-bottom: 10px;
    }

    p {
        font-size: 16px;
        line-height: 1.5;
        color: #666;
    }

    .error-message {
        font-size: 18px;
        color: #f44336;
        margin-top: 20px;
    }
</style>

<div class="error-container">
    <h1>Error</h1>
    <p>An error occurred while processing your request:</p>
    <p>@ViewBag.ExceptionMessage</p>
</div>
